<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="351dp"
            app:srcCompat="@drawable/hotel_logo_2" />

        <TextView
            android:id="@+id/tvAdd1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/_432_relax_lane1"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvAdd2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/portland_maine1"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvCost1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cost_250_450_a_night1"
            android:textAlignment="center"
            android:textSize="20sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>